.l-btn {
  text-align: center;
  vertical-align: middle;
  touch-action: manipulation;
  cursor: pointer;
  background-image: none;
  white-space: nowrap;
  -webkit-user-select: none;
          user-select: none;
  font-size: 28rpx;
  border-radius: 8rpx;
  border: 0 !important;
  position: relative;
  text-decoration: none;
  height: 72rpx;
  line-height: 72rpx;
}
.l-btn-text {
  box-shadow: none;
  color: #2B3243;
  background-color: transparent;
}
.l-btn-text::after {
  border: none;
}
.l-btn-long {
  border-radius: 0;
  margin: 0;
  box-shadow: none;
}
.l-btn-primary {
  color: #ffffff !important;
  background: #0EB271 !important;
}
.l-btn-success {
  color: #ffffff !important;
  background: #039D05 !important;
}
.l-btn-warning {
  color: #ffffff !important;
  background: #FF9900 !important;
}
.l-btn-error {
  color: #ffffff !important;
  background: #FF4949 !important;
}
.l-btn-large {
  height: 80rpx;
  line-height: 80rpx;
}
.l-btn-small {
  height: 64rpx;
  line-height: 64rpx;
}
.l-btn-loading-inner {
  display: inline-block;
  margin-right: 24rpx;
  vertical-align: middle;
  width: 28rpx;
  height: 28rpx;
  background: transparent;
  border-radius: 50%;
  border: 4rpx solid #fff;
  border-color: #fff #fff #fff transparent;
  -webkit-animation: btn-spin 0.6s linear;
          animation: btn-spin 0.6s linear;
  -webkit-animation-iteration-count: infinite;
          animation-iteration-count: infinite;
}
.l-btn-loading {
  opacity: 0.6;
}
.l-btn-disabled {
  color: #808695;
  background-color: #C4C4C4 !important;
}
.l-btn-hover {
  opacity: 0.9;
}
@-webkit-keyframes btn-spin {
  0% {
    -webkit-transform: rotate(0);
            transform: rotate(0);
  }
  100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
  }
}
@keyframes btn-spin {
  0% {
    -webkit-transform: rotate(0);
            transform: rotate(0);
  }
  100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
  }
}
