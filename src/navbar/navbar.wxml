<view class="l-class navbar-wrap" style="background-color: {{bgColor}};">
  <image class="bgimg" wx:if="{{bgsrc}}" src="{{bgsrc}}" mode="aspectFill"></image>
  <view style="height: {{statusBarHeight}}px;"></view>
  <view class="content">
    <view wx:if="{{customIcon}}" class="custom-back" bindtap="handleBack">
      <slot name="backIcon"></slot>
    </view>
    <view wx:if="{{showBack && !customIcon}}" class="back" bindtap="handleBack">
      <text wx:if="{{showCancel}}" class="cancel-btn">取消</text>
      <l-icon wx:else  l-class="back-btn" custom="topback" size="16" style="color: {{color}}"></l-icon>
    </view>
    <view wx:if="{{title}}" class="title" style="color: {{color}};">{{title}}</view>
    <view wx:if="{{showSearch}}" class="search-input">
      <l-icon l-class="prefix-icon" custom="sousuo" size="12"></l-icon>
      <input class="input" type="text" bindinput="handleInput" bindblur="handleBlur" bindfocus="handleFocus" placeholder="去查商标"/>
    </view>
  </view>
</view>
<view wx:if="{{hastop}}" class="padding" style="width: 100%; height: {{navBarHeight}}px"></view>
